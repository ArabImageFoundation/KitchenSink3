body
	font-family Roboto


button
	border none
	background #ccc
	border-radius 2px
	text-align center
	letter-spacing .5px
	display inline-block
	height 36px
	line-height 1
	outline 0
	padding 0 2rem
	cursor pointer
	text-transform uppercase
	box-shadow 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12)
	&.flat
		box-shadow none

input:not([type]),
input[type=text],
input[type=password], 
input[type=email], 
input[type=url], 
input[type=time], 
input[type=date], 
input[type=datetime-local], 
input[type=tel],
input[type=number], 
input[type=search], 
textarea,
select
	background-color transparent
	border none
	border-bottom 1px solid #9e9e9e
	border-radius 0
	outline none
	height 3rem
	width 100%
	font-size 1.2rem
	margin 0 0 15px 0
	padding 0
	box-shadow none
	box-sizing border-box
	transition all .3s
	line-height normal
	font-family Roboto

textarea
	height 6rem
	padding-top .5em

.input-control
	.input-field
		position relative
		input, textarea, select
			padding-left 2em
		textarea
			padding-right 2em
		.material-icons
			position absolute
			top .5em
			left 0
		.keyboard_return
			left auto
			top auto
			right 1em
			bottom 1em
	.help,.error
		font-size 1em
		overflow hidden
		padding 0
		line-height 1em
		background #fdfdfd
		box-shadow 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12)
		transition all .3s ease-out
		span,i
			vertical-align middle
			font-size 1em
		i
			color #26a69a
	.help
		height 0
	.error
		height 1em
		padding .2em
		i,span
			color #F44336
	&.focused
		outline none
		.help
			padding .2em
			height 1em
		label
			color #26a69a 
		input:not([type]),
		input[type=text],
		input[type=password], 
		input[type=email], 
		input[type=url], 
		input[type=time], 
		input[type=date], 
		input[type=datetime-local], 
		input[type=tel],
		input[type=number], 
		input[type=search], 
		textarea
			border-bottom 1px solid #26a69a
			box-shadow 0 1px 0 0 #26a69a
	&.hasErrors
		border-bottom 1px solid #F44336
		box-shadow 0 1px 0 0 #F44336
	&.input-control-checkbox
		padding-top 1.5em
		padding-bottom 1.5em
		height 3em
		vertical-align middle
		input
			display none
		label
			display inline-block
			vertical-align middle
			&:before
				content ''
				vertical-align middle
				margin-right 1em
				display inline-block
				width 2em
				height 2em
				line-height 2em
				text-align center
				border 1px solid #cacaca
				font-family: 'Material Icons';
				font-weight: normal;
				font-style: normal;
				letter-spacing: normal;
				text-transform: none;
				display: inline-block;
				white-space: nowrap;
				word-wrap: normal;
				direction: ltr;
				-webkit-font-feature-settings: 'liga';
				-webkit-font-smoothing: antialiased;
				color #26a69a
		&.checked
			label:before
				content 'check'
		
.mode-Load
	input
		float left
.menu
	background #26a69a
	vertical-align middle
	.header
		span
			font-size 1.2em
			line-height 2em
			margin 0 .5em
	.menu-item
		line-height 1
		display inline-block
		height 2em
		padding .5em
		vertical-align middle
		text-align center
		text-decoration none
		img,span
			display inline-block
			height 2em
			vertical-align middle
		&.active
			border-bottom-color #fcfcfc
	a
		color white
		border-bottom 3px solid transparent
		span
			transition all .5s ease-out
		&:hover
			span
				transform translate3d(0,-.3em,0)
				transition all .3s ease-in
	.help
		color #cacaca
		font-size .7em
		float right
	nav nav
		font-size .8em
		background lighten(#26a69a,10)
				
.body
	max-width 1024px
	margin 0 auto
.ModelManager.mode-List
	display block
	margin 1em auto
	max-width 90%
	border 1px solid #a3a3a3
	border-radius 2px
	overflow auto
	.buttonGroup
		padding 1em

.model-item-Summary
	display block
	background #fdfdfd
	border-bottom 1px solid #a3a3a3
	cursor pointer
	transition all 1s ease-out
	position relative
	.view-link
		position relative
		display block
		padding 1em
	.remove-link
		position absolute
		right .5em
		top .7em
		display none
	&:hover
		background #26a69a
		color #fdfdfd
		transition all .3s ease-in
		.remove-link
			display block
	&:after
		visibility: hidden
		display: block
		font-size: 0
		content: " "
		clear: both
		height: 0
	&.Collection-item
		.main
			float left
			.title
				font-size 1.5em
			.ref
				color #a3a3a3
				font-size .8em
				font-style italic
				&:before
					content '('
				&:after
					content ')'
		.photos
			float right
			>div
				float right
				margin .1em
			.reference
				display none

.google-map
	min-height 15em
	min-width 5em